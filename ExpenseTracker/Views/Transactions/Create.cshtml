@model ExpenseTracker.Models.Transaction
@{
    ViewData["Title"] = "Thêm giao dịch";
}

<h4>Thêm giao dịch</h4>

<form asp-action="Create" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-3">
        <label class="form-label">Ngày</label>
        <input asp-for="TransactionDate" type="date" class="form-control" />
        <span asp-validation-for="TransactionDate" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Ghi chú</label>
        <input asp-for="Note" class="form-control" />
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label class="form-label">Danh mục</label>
        <select asp-for="CategoryId" class="form-select"
                asp-items="@(ViewBag.CategoryId)">
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="col-md-2">
        <label class="form-label">Số tiền</label>
        <input asp-for="Amount" class="form-control" inputmode="decimal" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button class="btn btn-success">Lưu</button>
        <a class="btn btn-secondary" asp-action="Index">Hủy</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
